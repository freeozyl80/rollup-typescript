{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "diagnostics": true,
        "listFiles": true,
        "pretty": true,
        "moduleResolution": "node",
        "noEmitOnError": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "declaration": true,
        "strict": true,
        "outDir": "./build"
    },
    "include": [
        "src/**/*.ts"
    ]
}